{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],

  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      },

      "webpack": {
        "config": "webpack.config.js"
      }
    }
  },

  "rules": {
    "import/prefer-default-export": "off"
  },

  "globals": {
    "document": true,
    "window": true
  }
}
